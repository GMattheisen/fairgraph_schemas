{
    "@context": [
        "https://nexus.humanbrainproject.org/v0/contexts/neurosciencegraph/core/schema/v0.1.0",
        {
            "this": "https://nexus.humanbrainproject.org/v0/schemas/neurosciencegraph/optophysiology/cranialwindow/v0.1.1/shapes/"
        },
        "https://nexus.humanbrainproject.org/v0/contexts/nexus/core/resource/v0.3.0"
    ],
    "@id": "https://nexus.humanbrainproject.org/v0/schemas/neuralactivity/optophysiology/cranialwindow/v0.1.1",
    "@type": "nxv:Schema",
    "imports": [
        "https://nexus.humanbrainproject.org/v0/schemas/neurosciencegraph/commons/entity/v0.1.0",
        "https://nexus.humanbrainproject.org/v0/schemas/neurosciencegraph/commons/quantitativevalue/v0.1.0"
    ],
    "shapes": [
        {
            "@id": "this:CranialWindowShape",
            "@type": "sh:NodeShape",
            "and": [
                {
                    "node": "https://nexus.humanbrainproject.org/v0/schemas/neurosciencegraph/commons/entity/v0.1.0/shapes/EntityShape"
                },
                {
                    "property": [
                        {
                            "description": "Brain location information",
                            "name": "Brain location",
                            "node": "https://nexus.humanbrainproject.org/v0/schemas/neurosciencegraph/commons/brainlocation/v0.1.1/shapes/BrainLocationShape",
                            "path": "nsg:brainLocation"
                        },
                        {
                            "description": "The type of window.",
                            "in": [
                                "open window",
                                "thinned skull",
                                "chronically implanted glass window"
                            ],
                            "maxCount": 1,
                            "name": "Window Type",
                            "path": "nsg:windowType"
                        },
                        {
                            "description": "Diameter of the window.",
                            "maxCount": 1,
                            "name": "Diameter",
                            "node": "https://nexus.humanbrainproject.org/v0/schemas/neurosciencegraph/commons/quantitativevalue/v0.1.2/shapes/QuantitativeValueShape",
                            "path": "nsg:diameter"
                        },
                        {
                            "datatype": "xsd:string",
                            "description": "Details of the labelling method (for example, injection of a viral construct).",
                            "name": "Fluorescence labelling",
                            "path": "nsg:fluorescenceLabelling"
                        },
                        {
                            "datatype": "xsd:string",
                            "description": "Any additional information about the window that does not fit elsewhere.",
                            "maxCount": 1,
                            "name": "Description",
                            "path": "nsg:description"
                        },
                        {
                            "class": "nsg:Craniotomy",
                            "description": "Craniotomy that generated trace",
                            "maxCount": 1,
                            "name": "Was generated by",
                            "path": "prov:wasGeneratedBy"
                        }
                    ]
                }
            ],
            "description": "A window (partially) through the skull.",
            "label": "Cranial window shape definition",
            "nodeKind": "sh:BlankNodeOrIRI",
            "targetClass": "nsg:CranialWindow"
        }
    ]
}
