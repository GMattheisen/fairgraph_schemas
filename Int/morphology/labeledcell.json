{
    "@context": [
        "https://nexus-int.humanbrainproject.org/v0/contexts/neurosciencegraph/core/schema/v0.1.0",
        {
            "this": "https://nexus-int.humanbrainproject.org/v0/schemas/neurosciencegraph/morphology/labeledcell/v0.1.0/shapes/"
        },
        "https://nexus-int.humanbrainproject.org/v0/contexts/nexus/core/resource/v0.3.0"
    ],
    "@id": "https://nexus-int.humanbrainproject.org/v0/schemas/neuralactivity/morphology/labeledcell/v0.1.1",
    "@type": "nxv:Schema",
    "imports": [
        "https://nexus-int.humanbrainproject.org/v0/schemas/neurosciencegraph/commons/entity/v0.1.0",
        "https://nexus-int.humanbrainproject.org/v0/schemas/neurosciencegraph/commons/quantitativevalue/v0.1.0",
        "https://nexus-int.humanbrainproject.org/v0/schemas/neurosciencegraph/commons/typedlabeledontologyterm/v0.1.0",
        "https://nexus-int.humanbrainproject.org/v0/schemas/neurosciencegraph/commons/brainlocation/v0.1.0"
    ],
    "prov:wasDerivedFrom": "https://github.com/INCF/neuroshapes/blob/v0.3.15/modules/morphology/src/main/resources/schemas/neurosciencegraph/morphology/labeledcell/v0.2.0.json",
    "shapes": [
        {
            "@id": "this:LabeledCellShape",
            "@type": "sh:NodeShape",
            "and": [
                {
                    "node": "https://nexus-int.humanbrainproject.org/v0/schemas/neurosciencegraph/commons/entity/v0.1.0/shapes/EntityShape"
                },
                {
                    "property": [
                        {
                            "datatype": "xsd:string",
                            "description": "Project name",
                            "maxCount": 1,
                            "name": "Project name for data produced within the context of a project",
                            "path": "nsg:projectName"
                        },
                        {
                            "description": "Brain location",
                            "maxCount": 1,
                            "name": "Brain location of the labeled cell.",
                            "node": "https://nexus-int.humanbrainproject.org/v0/schemas/neurosciencegraph/commons/brainlocation/v0.1.0/shapes/BrainLocationShape",
                            "path": "nsg:brainLocation"
                        },
                        {
                            "description": "Indicates the putative morphology type of the labeled cell.",
                            "maxCount": 1,
                            "name": "Putative morphology type",
                            "node": "https://nexus-int.humanbrainproject.org/v0/schemas/neurosciencegraph/commons/typedlabeledontologyterm/v0.1.0/shapes/CellTypeOntologyTermShape",
                            "path": "nsg:putativeMType"
                        },
                        {
                            "description": "Specifies the coordinates of the location of the cell in the slice",
                            "maxCount": 1,
                            "name": "Coordinates of location in slice",
                            "node": "https://nexus-int.humanbrainproject.org/v0/schemas/neurosciencegraph/optophysiology/position/v0.1.0/shapes/PositionShape",
                            "path": "nsg:locationInSlice"
                        },
                        {
                            "datatype": "xsd:string",
                            "description": "Spatial cell name given during the annotation process.",
                            "maxCount": 1,
                            "name": "Spatial cell name",
                            "path": "nsg:spatialCellName"
                        },
                        {
                            "datatype": "xsd:boolean",
                            "description": "Indicates if reconstruction the cell has been requested or not",
                            "maxCount": 1,
                            "name": "Reconstruction requested",
                            "path": "nsg:reconstructionRequested"
                        },
                        {
                            "datatype": "xsd:string",
                            "description": "Indicates if the cell can be reconstructed or not",
                            "maxCount": 1,
                            "name": "Reconstructable",
                            "path": "nsg:reconstructable"
                        },
                        {
                            "class": "nsg:PatchedCell",
                            "description": "The patched cell this labeled cell is a revision of",
                            "maxCount": 1,
                            "name": "Patched cell",
                            "path": "prov:wasRevisionOf"
                        }
                    ]
                }
            ],
            "comment": "Labeled cell shape definition",
            "nodeKind": "sh:BlankNodeOrIRI",
            "targetClass": "nsg:LabeledCell"
        }
