{
    "@context": [
        "https://nexus-int.humanbrainproject.org/v0/contexts/neurosciencegraph/core/schema/v0.1.0",
        {
            "this": "https://nexus-int.humanbrainproject.org/v0/schemas/neurosciencegraph/electrophysiology/multitrace/v0.3.2/shapes/"
        },
        "https://nexus-int.humanbrainproject.org/v0/contexts/nexus/core/resource/v0.3.0"
    ],
    "@id": "https://nexus-int.humanbrainproject.org/v0/schemas/neuralactivity/electrophysiology/multitrace/v0.3.2",
    "@type": "nxv:Schema",
    "imports": [
        "https://nexus-int.humanbrainproject.org/v0/schemas/neurosciencegraph/commons/entity/v0.1.0",
        "https://nexus-int.humanbrainproject.org/v0/schemas/neurosciencegraph/commons/quantitativevalue/v0.1.2",
        "https://nexus-int.humanbrainproject.org/v0/schemas/neurosciencegraph/commons/typedlabeledontologyterm/v0.1.1"
    ],
    "shapes": [
        {
            "@id": "this:MultiChannelMultiTrialRecordingShape",
            "@type": "sh:NodeShape",
            "and": [
                {
                    "node": "https://nexus-int.humanbrainproject.org/v0/schemas/neurosciencegraph/commons/entity/v0.1.0/shapes/EntityShape"
                },
                {
                    "property": [
                        {
                            "datatype": "xsd:string",
                            "description": "Name of the project that the trace(s) was(were) recorded for",
                            "maxCount": 1,
                            "name": "Project name",
                            "path": "nsg:projectName"
                        },
                        {
                            "datatype": "xsd:string",
                            "description": "Channel name(s) of trace(s)",
                            "minCount": 1,
                            "name": "Channel name(s)",
                            "path": "nsg:channelName"
                        },
                        {
                            "datatype": "xsd:dateTime",
                            "description": "Retrieval date of binary",
                            "maxCount": 1,
                            "name": "Retrieval date",
                            "path": "nsg:retrievalDate"
                        },
                        {
                            "description": "Units of the channels data (e.g. mV or pA)",
                            "minCount": 1,
                            "name": "Data unit",
                            "or": [
                                {
                                    "datatype": "xsd:string"
                                },
                                {
                                    "node": "https://nexus-int.humanbrainproject.org/v0/schemas/neurosciencegraph/commons/typedlabeledontologyterm/v0.1.1/shapes/UnitOntologyTermShape"
                                }
                            ],
                            "path": "nsg:dataUnit"
                        },
                        {
                            "description": "Time step (inverted sampling frequency) of data",
                            "maxCount": 1,
                            "name": "Time step",
                            "node": "https://nexus-int.humanbrainproject.org/v0/schemas/neurosciencegraph/commons/quantitativevalue/v0.1.2/shapes/QuantitativeValueShape",
                            "path": "nsg:timeStep"
                        },
                        {
                            "class": "nsg:MultiTraceGeneration",
                            "description": "Qualified multi-trace generation",
                            "maxCount": 1,
                            "minCount": 1,
                            "name": "Qualified generation",
                            "path": "prov:qualifiedGeneration"
                        },
                        {
                            "class": {
                                "or": [
                                    "nsg:StimulusExperiment"                                ]
                            },
                            "description": "Stimulus experiment that generated trace",
                            "maxCount": 1,
                            "minCount": 1,
                            "name": "Was generated by",
                            "path": "prov:wasGeneratedBy"
                        }
                    ]
                }
            ],
            "label": "Electrophysiology multi-channel, multi-trial shape definition.",
            "nodeKind": "sh:BlankNodeOrIRI",
            "targetClass": "nsg:MultiChannelMultiTrialRecording"
        }
    ]
}