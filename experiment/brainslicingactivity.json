{
    "@context": [
        "https://nexus.humanbrainproject.org/v0/contexts/neurosciencegraph/core/schema/v0.1.0",
        {
            "this": "https://nexus.humanbrainproject.org/v0/schemas/neurosciencegraph/experiment/brainslicing/v0.1.0/shapes/"
        },
        "https://nexus.humanbrainproject.org/v0/contexts/nexus/core/resource/v0.3.0"
    ],
    "@id": "https://nexus.humanbrainproject.org/v0/schemas/neurosciencegraph/experiment/brainslicing/v0.1.0",
    "@type": "nxv:Schema",
    "imports": [
        "https://nexus.humanbrainproject.org/v0/schemas/neurosciencegraph/commons/activity/v0.1.0",
        "https://nexus.humanbrainproject.org/v0/schemas/neurosciencegraph/commons/quantitativevalue/v0.1.0",
        "https://nexus.humanbrainproject.org/v0/schemas/neurosciencegraph/commons/brainlocation/v0.1.0"
    ],
    "shapes": [
        {
            "@id": "this:BrainSlicingShape",
            "@type": "sh:NodeShape",
            "and": [
                {
                    "node": "https://nexus.humanbrainproject.org/v0/schemas/neurosciencegraph/commons/activity/v0.1.0/shapes/ActivityShape"
                },
                {
                    "property": [
                        {
                            "class": "nsg:Subject",
                            "description": "The subject used",
                            "maxCount": 1,
                            "minCount": 1,
                            "path": "prov:used"
                        },
                        {
                            "class": "nsg:Slice",
                            "description": "The slice generated",
                            "minCount": 1,
                            "path": "prov:generated"
                        },
                        {
                            "description": "Brain location information",
                            "name": "Brain location",
                            "node": "https://nexus.humanbrainproject.org/v0/schemas/neurosciencegraph/commons/brainlocation/v0.1.0/shapes/BrainLocationShape",
                            "path": "nsg:brainLocation"
                        },
                        {
                            "description": "Slicing plane of the brain",
                            "in": [
                                "Sagittal",
                                "Para-sagittal",
                                "Coronal",
                                "Horizontal"
                            ],
                            "maxCount": 1,
                            "name": "Slicing plane",
                            "path": "nsg:slicingPlane"
                        },
                        {
                            "datatype": "xsd:string",
                            "description": "Slicing angle of brain",
                            "maxCount": 1,
                            "name": "Slicing angle",
                            "path": "nsg:slicingAngle"
                        },
                        {
                            "description": "Cutting thickness of brain slice",
                            "maxCount": 1,
                            "name": "Cutting thickness",
                            "node": "https://nexus.humanbrainproject.org/v0/schemas/neurosciencegraph/commons/quantitativevalue/v0.1.0/shapes/QuantitativeValueShape",
                            "path": "nsg:cuttingThickness"
                        },
                        {
                            "description": "Brain hemisphere that was sliced",
                            "in": [
                                "Left",
                                "Right"
                            ],
                            "maxCount": 2,
                            "name": "Hemisphere",
                            "path": "nsg:hemisphere"
                        },
                        {
                            "datatype": "xsd:string",
                            "description": "Solution in which the brain was sliced",
                            "maxCount": 1,
                            "name": "Solution",
                            "path": "nsg:solution"
                        }
                    ]
                }
            ],
            "label": "Brain slicing shape definition",
            "nodeKind": "sh:BlankNodeOrIRI",
            "targetClass": "nsg:BrainSlicing"
        }
    ]
}
