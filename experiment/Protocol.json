{
    "@context": [
        "https://nexus-int.humanbrainproject.org/v0/contexts/neurosciencegraph/core/schema/v0.1.0",
        {
            "this": "https://nexus-int.humanbrainproject.org/v0/schemas/neuralactivity/commons/protocol/v0.1.1/shapes/"
        },
        "https://nexus-int.humanbrainproject.org/v0/contexts/nexus/core/resource/v0.3.0"
    ],
    "@id": "https://nexus-int.humanbrainproject.org/v0/schemas/neuralactivity/commons/protocol/v0.1.1",
    "@type": "nxv:Schema",
    "imports": [
        "https://nexus-int.humanbrainproject.org/v0/schemas/neurosciencegraph/commons/entity/v0.1.0",
        "https://nexus-int.humanbrainproject.org/v0/schemas/neurosciencegraph/commons/quantitativevalue/v0.1.0",
        "https://nexus-int.humanbrainproject.org/v0/schemas/nexus/schemaorgsh/identifier/v0.1.0",
        "https://nexus-int.humanbrainproject.org/v0/schemas/neurosciencegraph/commons/organization/v0.1.0",
        "https://nexus-int.humanbrainproject.org/v0/schemas/neurosciencegraph/commons/person/v0.1.0"
    ],
    "shapes": [
        {
            "@id": "this:ProtocolShape",
            "@type": "sh:NodeShape",
            "and": [
                {
                    "node": "https://nexus-int.humanbrainproject.org/v0/schemas/neurosciencegraph/commons/entity/v0.1.0/shapes/EntityShape"
                },
                {
                    "description": "The identifier of protocol such as a DOI, ISBN,...",
                    "name": "Identifier",
                    "node": "https://nexus-int.humanbrainproject.org/v0/schemas/nexus/schemaorgsh/identifier/v0.1.0/shapes/IdentifierShape",
                    "path": "schema:identifier"
                },
                {
                    "datatype": "xsd:dateTime",
                    "description": "Publishing date of protocol.",
                    "maxCount": 1,
                    "name": "date published",
                    "path": "schema:datePublished"
                },
                {
                    "description": "Materials used in protocol",
                    "name": "Materials",
                    "node": "this:MaterialsShape",
                    "path": "nsg:materials"
                },
                {
                    "description": "Author of the protocol",
                    "name": "Author",
                    "path": "schema:author",
                    "xone": [
                        {
                            "node": "https://nexus-int.humanbrainproject.org/v0/schemas/neurosciencegraph/commons/person/v0.1.0/shapes/PersonShape"
                        },
                        {
                            "node": "https://nexus-int.humanbrainproject.org/v0/schemas/neurosciencegraph/commons/organization/v0.1.0/shapes/OrganizationShape"
                        }
                    ]
                },
                {
                    "class": "schema:Organization",
                    "description": "Name of vendor of protocol",
                    "name": "Vendor",
                    "path": "nsg:vendor"
                },
                {
                    "datatype": "xsd:string",
                    "description": "Steps of protocol",
                    "name": "Steps",
                    "path": "nsg:steps"
                },
                {
                    "datatype": "xsd:string",
                    "description": "Warning for protocol",
                    "name": "Warning",
                    "path": "nsg:warning"
                }
            ],
            "label": "Protocol shape definition based on protocols.io json schema. The identifier of a protocol should be a valid IRI.",
            "nodeKind": "sh:BlankNodeOrIRI",
            "seeAlso": "http://apidoc.protocols.io/v3/#reagent-object"
        },
        {
            "@id": "this:MaterialsShape",
            "@type": "sh:NodeShape",
            "property": [
                {
                    "datatype": "xsd:string",
                    "description": "Name of reagent/material used",
                    "maxCount": 1,
                    "name": "Reagent name",
                    "path": "nsg:reagentName"
                },
                {
                    "description": "Molar weight of reagent",
                    "maxCount": 1,
                    "name": "Reagent molar weight",
                    "node": "https://nexus-int.humanbrainproject.org/v0/schemas/neurosciencegraph/commons/quantitativevalue/v0.1.0/shapes/QuantitativeValueShape",
                    "path": "nsg:reagentMolarWeight"
                },
                {
                    "datatype": "xsd:string",
                    "description": "Linear formula of reagent",
                    "maxCount": 1,
                    "name": "Reagent linear formula",
                    "path": "nsg:reagentLinearFormula"
                },
                {
                    "datatype": "xsd:string",
                    "description": "Stock keeping unit of reagent/material",
                    "maxCount": 1,
                    "name": "Reagent SKU",
                    "path": "schema:sku"
                },
                {
                    "description": "URL of reagent/material",
                    "maxCount": 1,
                    "name": "Reagent URL",
                    "node": "https://nexus-int.humanbrainproject.org/v0/schemas/nexus/schemaorgsh/identifier/v0.1.0/shapes/IdentifierShape",
                    "path": "schema:identifier"
                },
                {
                    "class": "schema:Organization",
                    "description": "Name of vendor of reagent",
                    "name": "Reagent vendor",
                    "path": "nsg:reagentVendor"
                }
            ]
        },
        {
            "@id": "this:HadProtocolValueShape",
            "@type": "sh:PropetyShape",
            "class": "nsg:Protocol",
            "description": "The value of nsg:hadProtocol should be of type nsg:Protocol.",
            "name": "Protocol",
            "path": "nsg:hadProtocol",
            "seeAlso": "https://nexus-int.humanbrainproject.org/v0/schemas/neurosciencegraph/commons/protocol/v0.1.0/shapes/ProtocolShape"
        }
    ]
}
